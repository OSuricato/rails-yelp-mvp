<div class="container">
  <%= render @restaurant %>
  <%# <img src="https://source.unsplash.com/random/300x300/?restaurant" alt="Restaurant Image" class="restaurant-image"> %>
  <%= link_to 'Edit this restaurant', edit_restaurant_path(@restaurant), class: 'btn btn-primary' %>

  <%= button_to 'Delete this restaurant', @restaurant, method: :delete, data: { 'turbo-confirm': 'Are you sure?' }, class: 'btn btn-danger' %>
  <%= link_to 'Back to index', restaurants_path, class: 'btn btn-secondary' %>


  <h2>Reviews</h2>
  <ul class="reviews-list">
    <% @restaurant.reviews.each do |review| %>
      <li>
        <%= review.rating %>
        <%= review.content %>
      </li>
    <% end %>
  </ul>

  <%= link_to 'Add new review', new_restaurant_review_path(@restaurant), class: 'btn btn-success' %>
</div>
